<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.tahweelapp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Tahweel</name>
    <description>
        Tahweel App
    </description>
    <author email="info@tahweelapp.com" href="http://phonegap.com">
        OD13
    </author>
    <content src="main.html" /> 
	<icon src="icon.png" />
	<access origin='*' />
	<allow-intent href="*" />
	<allow-navigation href="*" />
	
	<!-- for iOS -->
	<feature name="SocialSharing">
	  <param name="ios-package" value="SocialSharing" />
	</feature>
	
	<!-- for Android (you will find one in res/xml) -->
	<feature name="SocialSharing">
	  <param name="android-package" value="nl.xservices.plugins.SocialSharing" />
	</feature>
	
	<!-- for Windows Phone -->
	<feature name="SocialSharing">
	  <param name="wp-package" value="SocialSharing"/>
	</feature>

	<plugin name="cordova-plugin-x-socialsharing" source="npm" />
	<plugin name="cordova-plugin-whitelist" source="npm" />
	<plugin name="cordova-plugin-splashscreen" source="npm" />
	<plugin name="com-admob-plugin" version="5.3.1" source="npm"/>
	
	<splash src="splash.png" />
	<splash platform="android" qualifier="port-ldpi" src="img/splash/andoid/port-ldpi.png" />
	<splash platform="android" qualifier="port-mdpi" src="img/splash/android/port-mdpi.png" />
	<splash platform="android" qualifier="port-hdpi" src="img/splash/android/port-hdpi.png" />
	<splash platform="android" qualifier="port-xhdpi" src="img/splash/android/port-xhdpi.png" /> 
	<splash platform="android" qualifier="land-ldpi" src="img/splash/android/land-lhdpi.png" />
	<splash platform="android" qualifier="land-mdpi" src="img/splash/android/land-mdpi.png" />
	<splash platform="android" qualifier="land-hdpi" src="img/splash/android/land-hdpi.png" />
	<splash platform="android" qualifier="land-xhdpi" src="img/splash/android/land-xhdpi.png" />
	
	<splash src="res/screen/ios/Default~iphone.png" width="320" height="480"/>
    <splash src="res/screen/ios/Default@2x~iphone.png" width="640" height="960"/>
    <splash src="res/screen/ios/Default-Portrait~ipad.png" width="768" height="1024"/>
    <splash src="res/screen/ios/Default-Portrait@2x~ipad.png" width="1536" height="2048"/>
    <splash src="res/screen/ios/Default-Landscape~ipad.png" width="1024" height="768"/>
    <splash src="res/screen/ios/Default-Landscape@2x~ipad.png" width="2048" height="1536"/>
    <splash src="res/screen/ios/Default-568h@2x~iphone.png" width="640" height="1136"/>
    <splash src="res/screen/ios/Default-667h.png" width="750" height="1334"/>
    <splash src="res/screen/ios/Default-736h.png" width="1242" height="2208"/>
    <splash src="res/screen/ios/Default-Landscape-736h.png" width="2208" height="1242"/>
	
	<preference name="SplashScreenDelay" value="5000" />
	<preference name="orientation" value="portrait" />
	<preference name="ShowSplashScreenSpinner" value="false"/>
</widget>
